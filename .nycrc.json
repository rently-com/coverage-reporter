{
  "include": [
    "src/**/*.js",
    "index.js",
    "bin/**/*.js"
  ],
  "exclude": [
    "test/**",
    "coverage/**",
    "node_modules/**"
  ],
  "reporter": [
    "text",
    "text-summary",
    "lcov",
    "json-summary"
  ],
  "report-dir": "coverage",
  "check-coverage": true,
  "lines": 80,
  "functions": 80,
  "branches": 80,
  "statements": 80
}
